Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/jammy64"

  # -------- VM 1: docker-db (runs postgres + volume + scripts) --------
  config.vm.define "docker-db" do |db|
    db.vm.hostname = "docker-db"
    db.vm.network "private_network", ip: "192.168.56.90"
    db.vm.provider "virtualbox" do |vb|
      vb.name = "week7-docker-db"
      vb.memory = 2048
      vb.cpus = 2
    end

    # Sync project folder into VM
    db.vm.synced_folder ".", "/vagrant", type: "virtualbox"

    # Provision with role=db
    db.vm.provision "shell",
      path: "provision.sh",
      args: ["db"],
      privileged: true
  end

  # -------- VM 2: backup-server (remote target for uploads) --------
  config.vm.define "backup-server" do |bkp|
    bkp.vm.hostname = "backup-server"
    bkp.vm.network "private_network", ip: "192.168.56.91"
    bkp.vm.provider "virtualbox" do |vb|
      vb.name = "week7-backup-server"
      vb.memory = 1024
      vb.cpus = 1
    end

    bkp.vm.synced_folder ".", "/vagrant", type: "virtualbox"

    # Provision with role=backup
    bkp.vm.provision "shell",
      path: "provision.sh",
      args: ["backup"],
      privileged: true
  end
end